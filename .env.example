NODE_ENV=development
PORT=3000

# Database
MONGODB_URI="mongodb://localhost:27017/database_name"

# JWT
JWT_SECRET="your_jwt_secret_key_at_least_32_chars"
JWT_REFRESH_SECRET="your_jwt_refresh_secret_key_at_least_32_chars"
ACCESS_TOKEN_EXPIRATION="15m" # e.g., 15m, 1h, 7d
REFRESH_TOKEN_EXPIRATION="7d"

# Redis for Job Queue & Caching
REDIS_HOST=localhost
REDIS_PORT=6379

# Sentry
SENTRY_DSN="your_sentry_dsn_here"

# Google OAuth2
GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"
GOOGLE_REDIRECT_URI="http://localhost:3000/api/v1/auth/google/callback"

# CSRF
CSRF_SECRET="your_csrf_secret_key_at_least_32_chars"

# API Key (for external integrations)
API_KEY_SECRET="your_api_key_secret_at_least_32_chars"

# CORS - Comma-separated list of allowed origins, or * for all (use specific origins in production)
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:5173"

# File Storage Configuration
# Options: LOCAL, S3, CLOUDINARY
FILE_STORAGE_PROVIDER=LOCAL

# AWS S3 Configuration (if FILE_STORAGE_PROVIDER is S3)
AWS_ACCESS_KEY_ID="your_aws_access_key_id"
AWS_SECRET_ACCESS_KEY="your_aws_secret_access_key"
AWS_REGION="us-east-1" # e.g., us-east-1, eu-west-1
AWS_S3_BUCKET_NAME="your_s3_bucket_name"

# Cloudinary Configuration (if FILE_STORAGE_PROVIDER is CLOUDINARY)
CLOUDINARY_CLOUD_NAME="your_cloudinary_cloud_name"
CLOUDINARY_API_KEY="your_cloudinary_api_key"
CLOUDINARY_API_SECRET="your_cloudinary_api_secret"

# Feature Flags (JSON string or comma-separated list of enabled flags)
# Example JSON: {"NEW_FEATURE_ENABLED": true, "BETA_TESTING": false}
# Example Comma-separated: NEW_FEATURE_ENABLED,BETA_TESTING
FEATURE_FLAGS="{}"
