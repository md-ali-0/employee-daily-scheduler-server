{
  "subject": "Your Post Has Been Approved!",
  "template": "\n<!DOCTYPE html>\n<html>\n<head>\n    <meta charset=\"utf-8\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n    <title>Post Approved</title>\n    <style>\n        body { font-family: Arial, sans-serif; line-height: 1.6; color: #333; }\n        .container { max-width: 600px; margin: 0 auto; padding: 20px; }\n        .header { background: linear-gradient(135deg, #00b894 0%, #00a085 100%); color: white; padding: 30px; text-align: center; border-radius: 10px 10px 0 0; }\n        .content { background: #f9f9f9; padding: 30px; border-radius: 0 0 10px 10px; }\n        .success { background: #d4edda; border: 1px solid #c3e6cb; padding: 15px; border-radius: 5px; margin: 20px 0; }\n        .button { display: inline-block; background: #00b894; color: white; padding: 12px 30px; text-decoration: none; border-radius: 5px; margin: 20px 0; }\n        .footer { text-align: center; margin-top: 30px; color: #666; font-size: 14px; }\n    </style>\n</head>\n<body>\n    <div class=\"container\">\n        <div class=\"header\">\n            <h1>✅ Post Approved!</h1>\n        </div>\n        <div class=\"content\">\n            <h2>Congratulations, {{authorName}}!</h2>\n            <p>Your post has been approved and is now live on our platform.</p>\n            \n            <div class=\"success\">\n                <strong>Post Details:</strong><br>\n                📝 Title: {{postTitle}}<br>\n                📅 Published: {{publishDate}}<br>\n                🏷️ Category: {{category}}<br>\n                🔗 URL: <a href=\"{{postUrl}}\">{{postUrl}}</a>\n            </div>\n            \n            <p>Your content is now visible to all our readers. Keep up the great work!</p>\n            \n            <a href=\"{{postUrl}}\" class=\"button\">View Your Post</a>\n            \n            <p>Thank you for contributing to our community!</p>\n        </div>\n        <div class=\"footer\">\n            <p>© 2024 Blog Platform. All rights reserved.</p>\n        </div>\n    </div>\n</body>\n</html>"
}